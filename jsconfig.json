{
  "compilerOptions": {
      "experimentalDecorators": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "assets/*": ["src/assets/*"],
        "components/*": ["src/components/*"],
        "layout/*": ["src/layout/*"],
        "base/*": ["src/base/*"],
        "static/*": ["src/static/*"]
      },
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}